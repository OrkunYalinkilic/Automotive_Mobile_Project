<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F76D"
    android:orientation="vertical"
    tools:context=".Activity.DuyuruEklemeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/announcement"></ImageView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Duyuru Başlığı"
        android:textColor="#131F49"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextDuyuruBaslik"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:background="#FFF457"
        android:gravity="center"
        android:hint="Duyuru Başlığı"
        android:textColor="#131F49"
        android:padding="10dp"
        android:textSize="27dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Duyuru İçeriği"
        android:textColor="#131F49"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextDuyuruIcerik"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="20dp"
        android:background="#FFF457"
        android:gravity="center"
        android:textColor="#131F49"
        android:padding="10dp"
        android:hint="Duyuru İçeriği"
        android:textSize="24dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/buttonDuyuruyuEkle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="40dp"
        android:background="#131F49"
        android:text="DUYURU EKLE"
        android:textColor="#FFFFF7"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>