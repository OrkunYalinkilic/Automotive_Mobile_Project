<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEE29"
    android:orientation="vertical"
    tools:context=".Activity.IlanResimlerActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="İlan Fotoğraflarınızı Seçiniz"
        android:textColor="#131F49"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonResimler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="0dp"
        android:background="#131F49"
        android:text="İLERİ"
        android:textColor="#FFFFF7"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonForografSec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/ilan_resim_secim_button"
        android:text="FOTOĞRAF SEÇ"
        android:textColor="#FFFFF7"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewSecilenIlanResim"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="En fazla 4 fotoğraf seçebilirsiniz!"
        android:textColor="#131F49"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/textViewKalanHak"
        android:gravity="center"
        android:text="Kalan Fotoğraf Seçme Hakkınız: 4"
        android:textColor="#131F49"
        android:textSize="20dp" />





</LinearLayout>